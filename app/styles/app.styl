@font-face 
	font-family: 'Pricedown'
	src: url('../fonts/pricedown_bl-webfont.eot') format('eot'),
		url('../fonts/pricedown_bl-webfont.woff') format('woff'),
		url('../fonts/pricedown_bl-webfont.ttf') format('truetype'),
		url('../fonts/pricedown_bl-webfont.svg') format('svg')
	font-weight: normal
	font-style: normal
	
#loading
	z-index: 1002
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
	background: url('../ui/splashscreen.png') #000000 no-repeat center
	background-size: contain
	font-family: 'Pricedown'
	color: white
	text-shadow: 2px 2px 0px #333
	font-size: 36px
	background: -webkit-linear-gradient(69deg, #1b1917 0%, #a60a0a 60%)
	background: linear-gradient(21deg, #1b1917 0%, #a60a0a 60%)
	
#loading img#splash
	float: left
	position: absolute
	bottom: 0
	left: 50px
#loadingText
	height: 100%
	margin-left: 50%
	width: 50%
	text-align: center
	align: center
	line-height: 40px
	
#loadingText .inner
	padding: 20px

#loadingText h1
	font-weight: bold
	font-size: 48px
	
#loadingText table
	align: center
	margin: auto
	
#loadingText p
	margin-top: 40px
	
#loadingText td
	text-align: center
	padding-left: 20px
	padding-right: 20px
	
#loadingText button
	font-family: 'Pricedown'
	font-size: 48px
	height: 52px
	color: white
	text-shadow: 2px 2px 0px #333
	
#game
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
	overflow: hidden
	
#container 
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
