@font-face 
	font-family: 'Pricedown'
	src: url('../fonts/pricedown_bl-webfont.eot') format('eot'),
		url('../fonts/pricedown_bl-webfont.woff') format('woff'),
		url('../fonts/pricedown_bl-webfont.ttf') format('truetype'),
		url('../fonts/pricedown_bl-webfont.svg') format('svg')
	font-weight: normal
	font-style: normal

html, body
	height 100%
	margin 0
	padding 0

body > div:first-child 
	height 100%

.container
	width 100%
	padding 0

#home
	display table
	width 100%
	height 100%
	padding 0

	background: #f00
	background: -webkit-linear-gradient(69deg, #1b1917 0%, #a60a0a 60%)
	background: linear-gradient(21deg, #1b1917 0%, #a60a0a 60%)

	font-family: 'Pricedown'
	font-size: 36px
	color: white
	text-shadow: 2px 2px 0px #333
	line-height: 40px

	h1
		font-family: 'Pricedown'
		font-weight: bold
		font-size: 48px
	p
		margin: 24px 0px

	.start
		font-size: 48px
		height: 52px
		color: white
		text-shadow: 2px 2px 0px #333

	.row
		height 100%
		display table-cell
		vertical-align middle

#game
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
	overflow: hidden
	
#game-container 
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
