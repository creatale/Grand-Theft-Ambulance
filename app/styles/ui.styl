@font-face 
	font-family: 'Pricedown'
	src: url('pricedown_bl-webfont.eot') format('eot'),
		url('pricedown_bl-webfont.woff') format('woff'),
		url('pricedown_bl-webfont.ttf') format('truetype'),
		url('pricedown_bl-webfont.svg') format('svg')
	font-weight: normal
	font-style: normal
	
#loading
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
	background: url('../ui/splashscreen.png') #000000 no-repeat center
	background-size: contain
	font-family: 'Pricedown'
	color: white
	text-shadow: 2px 2px 0px #333
	font-size: 36px
	
#loadingText
	height: 100%
	margin-left: 50%
	width: 50%
	text-align: center
	align: center
	line-height: 40px
	
#loadingText .inner
	padding: 20px

#loadingText h1
	font-weight: bold
	font-size: 48px
	
#loadingText table
	align: center
	margin: auto
	
#loadingText p
	margin-top: 40px
	
#loadingText td
	text-align: center
	padding-left: 20px
	padding-right: 20px
	
#loadingText button
	font-family: 'Pricedown'
	font-size: 48px
	height: 52px
	color: white
	text-shadow: 2px 2px 0px #333
	
#game
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%
	
#container 
	position: absolute
	bottom: 0
	left: 0
	width: 100%
	height: 100%

#cargo-frame 
	position: absolute
	top: 12px
	left: 12px

#victim-timeleft
	font-family: 'Pricedown'
	color: white
	text-shadow: 2px 2px 0px #333
	font-weight: bold
	font-size: 18px

#crash-frame
	font-family: 'Pricedown'
	position: absolute
	top: 12px
	right: 12px

#cash 
	color: white
	text-shadow: 2px 2px 0px #333
	font-weight: bold
	font-size: 48px

#police-frame 
	position: absolute
	bottom: 12px
	left: 0
	width: 100%
	text-align: center
